<h1>Listing Books</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Title</th>
      <th>Author</th>
      <th>Price</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= link_to category_path(book.category) do %>
            <%= book.category %>
          <% end %>
        </td>
        <td>
          <%= link_to book_path(book) do %>
            <%= book.title %>
          <% end %>
        </td>
        <td>
          <%= link_to author_path(book.author) do %>
            <%= book.author %>
          <% end %>
        </td>
        <td><%= book.price %></td>
        <td>
          <% if false %>
           <%= link_to 'Edit', edit_book_path(book) %>
          <% end %>
          <%= link_to 'Add to cart', add_to_cart_path(book) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if false %>
  <%= link_to 'New Book', new_book_path %>
<% end %>
