<div class="row">
  <div id="book-header" class="col-lg-12">
    <div id="book-title">
        <%= card.title %>
    </div>
    <div id="book-author">
        <em>
          by 
          <%= link_to card.author, card.author %>
        </em>
    </div>
  </div>
</div>

<div class="row">
  <div id="book-details">    
    <div id="book-image" class="col-xl-2 col-lg-3 col-md-4 col-sm-5 box">
      <%= image_tag card.image.url(:thumb), class: 'content' %>
    </div>
    
    <div id="book-decription" class="col-xl-10 col-lg-9 col-md-8 col-sm-7">
      <%= card.description %>
      <br/>
      <br/>
      <div id="fb-root"></div>
      <div
        class="fb-like"
        data-href= <%= book_url(card) %>
        data-share="true"
        data-width="450"
        data-show-faces="true">
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div id="book-buyer-section" class="col-lg-3 col-lg-offset-3 col-md-4 col-md-offset-4 col-sm-5 col-sm-offset-4">
  <%= form_tag add_to_cart_path(card), method: 'POST' do %>
    <div  id="to-order" class="input-group">
      <span class="input-group-addon">
        <strong>$<%= card.price %></strong>
      </span>
      <%= number_field_tag 'quantity', 1, min: 1, max: 99, class: 'form-control', id: 'book-quantity' %>
      <span class="input-group-btn">
        <%= submit_tag "Add to cart", class: 'btn btn-success' %>
      </span>
    </div>
  <% end %>
  </div>
</div>
