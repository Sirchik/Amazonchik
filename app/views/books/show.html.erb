<%= render partial: 'card', object: @book %>

<h2>Reviews</h2>
<%= link_to 'Add review to this book', new_book_rating_path(book_id: @book.id) %>
<% @ratings.each do |item| %>
    <p>
        <%= item.rating %>
    </p>
    <p>
        by <%= item.user %>
    </p>
    <p>
        <%= item.created_at %>
    </p>
    <p>
        <%= item.review %>
    </p>
<% end %>

<% if false %>
<%= link_to 'Edit', edit_book_path(@book) %> |
<%= link_to 'Back', :back %>
<% end %>
