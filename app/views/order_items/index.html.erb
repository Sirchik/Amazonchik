<h1>Listing Order Items</h1>

<table>
  <thead>
    <tr>
      <th>#</th>
      <th>Book</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Total</th>
    </tr>
  </thead>

  <tbody>
    <% @order_items.each_with_index do |order_item, index| %>
      <tr>
        <td><%= index+1 %></td>
        <td>
          <%= link_to book_path(order_item.book) do%>
            <%= order_item.book %>
          <% end %>
        </td>
        <td><%= order_item.price %></td>
        <td><%= order_item.quantity %></td>
        <td><%= order_item.price * order_item.quantity %></td>
      </tr>
    <% end %>
      
    <tr>
      <td colspan="3"></td>
      <td><strong>Total:</strong></td>
      <td>
        <strong>
          <%= @order_items.first.order.total_price %>
        </strong>
      </td>
    </tr>
  </tbody>
</table>

<br>
